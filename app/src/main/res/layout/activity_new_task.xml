<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F2F2F2">

    <include android:id="@+id/toolbar_layout"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/components_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_name_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_fields"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/task_name_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/task_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:maxLines="1"
                android:maxLength="100"
                android:inputType="text"
                android:hint="Nazwa"
                android:textSize="16sp"
                android:textColorHint="@color/gray_949494"
                android:textColor="@color/gray_949494"
                android:background="@color/gray_FAFAFA"
                app:layout_constraintStart_toEndOf="@id/task_name_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_category_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_fields"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/task_category_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_dashboard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_category_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/task_category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Kategoria"
                android:textColor="@color/gray_949494"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/task_category_icon"
                app:layout_constraintEnd_toStartOf="@id/categories_arrow_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/categories_arrow_right"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_arrow_right_keyboard"
                app:layout_constraintStart_toEndOf="@id/task_category_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_badges_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_fields"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/task_badges_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_bookmarks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_badges_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/task_badges_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Etykiety"
                android:textColor="@color/gray_949494"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/task_badges_icon"
                app:layout_constraintEnd_toStartOf="@id/badges_arrow_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/badges_arrow_right"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_arrow_right_keyboard"
                app:layout_constraintStart_toEndOf="@id/task_badges_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_executor_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_fields"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/task_executor_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_people"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_executor_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/task_executor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Przypisane osoby"
                android:textColor="@color/gray_949494"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/task_executor_icon"
                app:layout_constraintEnd_toStartOf="@id/executor_arrow_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/executor_arrow_right"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_arrow_right_keyboard"
                app:layout_constraintStart_toEndOf="@id/task_executor_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_description_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_fields"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/task_description_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_description_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/task_description_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:maxLines="1"
                android:maxLength="250"
                android:inputType="text"
                android:hint="Opis"
                android:textSize="16sp"
                android:textColorHint="@color/gray_949494"
                android:textColor="@color/gray_949494"
                android:background="@color/gray_FAFAFA"
                app:layout_constraintStart_toEndOf="@id/task_description_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_date_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_fields"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/task_date_icon"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/task_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:maxLines="1"
                android:maxLength="250"
                android:inputType="text"
                android:hint="Data"
                android:textSize="16sp"
                android:textColorHint="@color/gray_949494"
                android:textColor="@color/gray_949494"
                android:background="@color/gray_FAFAFA"
                app:layout_constraintStart_toEndOf="@id/task_date_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_hour_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_fields"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/task_hour_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/gray_FAFAFA"
                android:tint="@color/gray_949494"
                app:srcCompat="@drawable/ic_clock"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/task_hour"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/task_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:maxLines="1"
                android:maxLength="250"
                android:inputType="text"
                android:hint="Godzina"
                android:textSize="16sp"
                android:textColorHint="@color/gray_949494"
                android:textColor="@color/gray_949494"
                android:background="@color/gray_FAFAFA"
                app:layout_constraintStart_toEndOf="@id/task_hour_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>