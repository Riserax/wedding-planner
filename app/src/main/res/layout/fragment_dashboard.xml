<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/root_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="top"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/components_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/wedding_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:background="@drawable/bg_dashboard_wedding_info"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/wedding_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Cały Ten Ślub"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/gray_777777"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:id="@+id/countdown_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/value1_layout"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:paddingBottom="@dimen/_9sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/bg_dashboard_countdown_period">

                                <TextView
                                    android:id="@+id/value1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/white_FFFFFF"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"/>

                                <TextView
                                    android:id="@+id/value1_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="miesiąc"
                                    android:textColor="@color/white_FFFFFF"
                                    android:textSize="@dimen/_9sdp"
                                    android:textAlignment="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/value2_layout"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:paddingBottom="@dimen/_9sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/bg_dashboard_countdown_period">

                                <TextView
                                    android:id="@+id/value2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/white_FFFFFF"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"/>

                                <TextView
                                    android:id="@+id/value2_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="miesiąc"
                                    android:textColor="@color/white_FFFFFF"
                                    android:textSize="@dimen/_9sdp"
                                    android:textAlignment="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/value3_layout"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_55sdp"
                                android:paddingBottom="@dimen/_9sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/bg_dashboard_countdown_period">

                                <TextView
                                    android:id="@+id/value3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/white_FFFFFF"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"/>

                                <TextView
                                    android:id="@+id/value3_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="miesiąc"
                                    android:textColor="@color/white_FFFFFF"
                                    android:textSize="@dimen/_9sdp"
                                    android:textAlignment="center"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/wedding_date_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data wesela"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/gray_777777"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/wedding_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="26.08.2023"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>