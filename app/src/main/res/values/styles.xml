<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/purple_500</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="TimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/purple_500</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:format24Hour">true</item>
    </style>
</resources>